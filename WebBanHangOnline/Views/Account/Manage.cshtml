@model ManageAccountViewModel

@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>@ViewData["Title"] - FoodShop</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter&amp;display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .field-validation-error {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen">

    <!-- Main container -->
    <main class="max-w-4xl mx-auto mt-6 px-4 sm:px-6 lg:px-8 pb-10">
        <h2 class="text-green-800 text-xl font-semibold flex items-center space-x-2 mb-4">
            <i class="fas fa-user-circle"></i>
            <span>Thông tin tài khoản</span>
        </h2>
        <section class="bg-white rounded-lg shadow-lg p-6 sm:p-8">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6" role="alert">
                    <p class="font-bold">Thành công</p>
                    <p>@TempData["SuccessMessage"]</p>
                </div>
            }

            <form asp-action="Manage" method="post" class="space-y-6 text-sm text-gray-700">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

                <!-- Họ và tên & Số điện thoại -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="FullName" class="block text-gray-800 font-semibold mb-1"></label>
                        <input asp-for="FullName" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" />
                        <span asp-validation-for="FullName" class="field-validation-error"></span>
                    </div>
                    <div>
                        <label asp-for="PhoneNumber" class="block text-gray-800 font-semibold mb-1"></label>
                        <input asp-for="PhoneNumber" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" />
                        <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
                    </div>
                </div>

                <!-- Email & Địa chỉ -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label asp-for="Email" class="block text-gray-800 font-semibold mb-1"></label>
                        <input asp-for="Email" class="w-full border border-gray-300 rounded-md px-3 py-2 bg-gray-100 text-gray-500" readonly />
                        <p class="text-xs text-gray-400 mt-1">Email không thể thay đổi.</p>
                    </div>
                    <div>
                        <label asp-for="Address" class="block text-gray-800 font-semibold mb-1"></label>
                        <input asp-for="Address" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" />
                        <span asp-validation-for="Address" class="field-validation-error"></span>
                    </div>
                </div>

                <!-- Đổi mật khẩu -->
                <div>
                    <label class="block text-gray-800 font-semibold mb-2">Đổi mật khẩu (bỏ trống nếu không đổi)</label>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <input asp-for="CurrentPassword" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" placeholder="Mật khẩu hiện tại" />
                            <span asp-validation-for="CurrentPassword" class="field-validation-error"></span>
                        </div>
                        <div>
                            <input asp-for="NewPassword" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" placeholder="Mật khẩu mới" />
                            <span asp-validation-for="NewPassword" class="field-validation-error"></span>
                        </div>
                        <div>
                            <input asp-for="ConfirmPassword" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" placeholder="Xác nhận mật khẩu mới" />
                            <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="flex justify-end space-x-4 pt-4 border-t border-gray-200">
                    <a asp-controller="Home" asp-action="Index" class="border border-gray-300 rounded-md px-4 py-2 text-gray-700 hover:bg-gray-100 transition">Hủy bỏ</a>
                    <button type="submit" class="bg-green-600 text-white rounded-md px-4 py-2 hover:bg-green-700 transition">Cập nhật thông tin</button>
                </div>
            </form>
        </section>
    </main>
</body>
</html>
