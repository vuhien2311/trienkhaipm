@model WebBanHangOnline.ViewModels.RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "Đăng ký tài khoản";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - FoodShop</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter&display=swap" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .field-validation-error {
            color: #ef4444; /* text-red-500 */
            font-size: 0.875rem; /* text-sm */
            margin-top: 0.25rem;
        }

        .validation-summary-errors ul {
            list-style-type: none;
            padding: 0;
            margin-bottom: 1rem;
        }

        .validation-summary-errors li {
            color: #ef4444; /* text-red-500 */
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-md p-8">
        <div class="text-center mb-4">
            <a asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-leaf fa-2x text-green-600"></i>
                <span class="text-green-700 font-semibold ml-2 text-xl align-middle">FoodShop</span>
            </a>
        </div>
        <h2 class="text-center font-semibold text-xl sm:text-2xl mb-2">Tạo tài khoản của bạn</h2>
        <p class="text-center text-sm text-gray-600 mb-6">Tham gia và bắt đầu mua sắm ngay hôm nay</p>

        <form asp-controller="Account" asp-action="Register" method="post">

            @* SỬA LỖI #1: Thay đổi từ "ModelOnly" thành "All" để hiển thị tất cả lỗi *@
            <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1">Họ và tên</label>
                    <input asp-for="FullName" placeholder="Nhập họ và tên của bạn" class="w-full text-sm border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" />
                    <span asp-validation-for="FullName" class="field-validation-error"></span>
                </div>
                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Tên đăng nhập</label>
                    <input asp-for="Username" placeholder="Tên sẽ dùng để đăng nhập" class="w-full text-sm border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" />
                    <span asp-validation-for="Username" class="field-validation-error"></span>
                </div>
            </div>

            <div class="mt-4">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Email" placeholder="Nhập địa chỉ email" class="w-full text-sm border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" />
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>

            <div class="mt-4">
                <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                <input asp-for="PhoneNumber" placeholder="Nhập số điện thoại" class="w-full text-sm border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" />
                <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
            </div>

            <div class="mt-4">
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu</label>
                <input asp-for="Password" type="password" placeholder="Tạo một mật khẩu" class="w-full text-sm border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" />
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>

            <div class="mt-4">
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Xác nhận mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password" placeholder="Xác nhận lại mật khẩu" class="w-full text-sm border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-1 focus:ring-green-600" />
                <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
            </div>

            <button type="submit" class="w-full bg-green-600 text-white text-sm font-semibold py-2.5 rounded-md hover:bg-green-700 transition mt-6">
                <i class="fas fa-user-plus mr-2"></i> Tạo tài khoản
            </button>
        </form>

        <p class="text-center text-sm text-gray-700 mt-6">
            Đã có tài khoản?
            <a asp-controller="Account" asp-action="Login" class="text-green-600 underline font-medium">Đăng nhập tại đây</a>
        </p>
    </div>

    @* SỬA LỖI #2: Thêm các script cần thiết cho validation phía client *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.unobtrusive-ajax.min.js"></script>

</body>
</html>