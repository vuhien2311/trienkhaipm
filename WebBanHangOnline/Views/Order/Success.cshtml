@{
    ViewData["Title"] = "Đặt hàng thành công";
}

<div class="text-center py-10">
    <div class="mb-4">
        <i class="fas fa-check-circle text-green-500 text-6xl"></i>
    </div>
    <h1 class="text-3xl font-bold text-gray-800">Cảm ơn bạn!</h1>
    <p class="text-gray-600 mt-2">Đơn hàng của bạn đã được đặt thành công.</p>
    <p class="text-gray-600">Chúng tôi sẽ xử lý và giao hàng cho bạn trong thời gian sớm nhất.</p>
    <div class="mt-6 space-x-4">
        <a asp-controller="Order" asp-action="MyOrders" class="bg-green-600 text-white font-semibold rounded-md px-6 py-3 hover:bg-green-700 transition">
            Xem đơn hàng của tôi
        </a>
        <a asp-controller="Home" asp-action="Index" class="text-gray-700 font-semibold hover:text-green-600">
            Tiếp tục mua sắm
        </a>
    </div>
</div>