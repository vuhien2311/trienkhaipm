@model Category
@{
    ViewData["Title"] = "Thêm danh mục mới";
}

<div class="max-w-2xl mx-auto">
    <div>
        <h1 class="text-2xl font-semibold text-gray-800">@ViewData["Title"]</h1>
        <p class="text-sm text-gray-600 mt-1">Điền thông tin chi tiết cho danh mục mới.</p>
    </div>

    <form asp-action="Create" method="post" class="mt-6 bg-white p-6 rounded-lg shadow">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All" class="text-red-500 mb-4 text-sm"></div>

        <div class="space-y-6">
            <div class="flex flex-col">
                <label asp-for="Name" class="mb-1 font-semibold text-gray-600 text-sm"></label>
                <input asp-for="Name" class="border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Name" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div class="flex flex-col">
                <label asp-for="Description" class="mb-1 font-semibold text-gray-600 text-sm"></label>
                <textarea asp-for="Description" class="border border-gray-300 rounded-md px-3 py-2 text-sm resize-none focus:outline-none focus:ring-2 focus:ring-green-500" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>

        <div class="flex items-center justify-end space-x-4 mt-8 pt-6 border-t border-gray-200">
            <a asp-action="Index" class="text-sm border border-gray-300 rounded-md px-4 py-2 text-gray-700 hover:bg-gray-100 transition">Hủy bỏ</a>
            <button type="submit" class="text-sm bg-green-600 text-white font-semibold rounded-md px-4 py-2 hover:bg-green-700 transition flex items-center gap-2">
                <i class="fas fa-save"></i>
                <span>Lưu danh mục</span>
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
