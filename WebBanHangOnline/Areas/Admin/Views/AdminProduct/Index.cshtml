@model IEnumerable<Product>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-4">
        <div>
            <h1 class="text-2xl font-semibold text-gray-800">@ViewData["Title"]</h1>
            <p class="text-sm text-gray-600 mt-1">Thêm, sửa, xóa và quản lý các sản phẩm.</p>
        </div>
        <a asp-action="Create" class="bg-green-600 text-white text-sm font-semibold rounded-md px-4 py-2 flex items-center gap-2 hover:bg-green-700 transition">
            <i class="fas fa-plus"></i>
            <span>Thêm sản phẩm</span>
        </a>
    </div>

    <div class="overflow-x-auto bg-white rounded-lg shadow">
        <table class="w-full text-left text-sm">
            <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                    <th class="py-3 px-4 font-semibold text-gray-700">Sản phẩm</th>
                    <th class="py-3 px-4 font-semibold text-gray-700">Danh mục</th>
                    <th class="py-3 px-4 font-semibold text-gray-700">Giá</th>
                    <th class="py-3 px-4 font-semibold text-gray-700">Tồn kho</th>
                    <th class="py-3 px-4 font-semibold text-gray-700 text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-b border-gray-200 hover:bg-gray-50">
                        <td class="py-3 px-4">
                            <div class="flex items-center gap-3">
                                <img alt="@item.Name" class="w-12 h-12 rounded-md object-cover" src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://placehold.co/100x100/EFEFEF/AAAAAA?text=Ảnh" : item.ImageUrl)" />
                                <div class="font-semibold text-gray-900">@item.Name</div>
                            </div>
                        </td>
                        <td class="py-3 px-4 text-gray-600">@item.Category.Name</td>
                        <td class="py-3 px-4 font-mono text-gray-900 font-semibold">@item.Price.ToString("N0")đ</td>
                        <td class="py-3 px-4 text-gray-600">@item.Stock</td>
                        <td class="py-3 px-4 text-center space-x-4">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900" title="Chỉnh sửa">
                                <i class="fas fa-pen-to-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900" title="Xóa">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
