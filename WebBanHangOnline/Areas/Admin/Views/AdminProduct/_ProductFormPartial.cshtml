@model Product

<div class="flex flex-col md:flex-row gap-8">
    <!-- Left: Product Images -->
    <div class="w-full md:w-72 flex flex-col space-y-3">
        <h3 class="font-semibold text-base text-gray-800">Hình ảnh sản phẩm</h3>
        @if (!string.IsNullOrEmpty(Model?.ImageUrl))
        {
            <div class="rounded-md border border-gray-200 overflow-hidden">
                <img alt="Ảnh sản phẩm hiện tại" class="w-full h-48 object-cover" src="@Model.ImageUrl" />
            </div>
        }
        <div class="flex flex-col">
            <label class="mb-1 font-semibold text-xs text-gray-600" for="imageFile">
                @(string.IsNullOrEmpty(Model?.ImageUrl) ? "Tải ảnh lên" : "Thay đổi ảnh")
            </label>
            <input name="imageFile" type="file" class="text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100" />
        </div>
    </div>

    <!-- Right: Product Info Form -->
    <div class="flex-1">
        <h3 class="font-semibold text-base text-gray-800 mb-4">Thông tin sản phẩm</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-sm text-gray-700">
            <div class="flex flex-col">
                <label asp-for="Name" class="mb-1 font-semibold text-gray-600"></label>
                <input asp-for="Name" class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Name" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div class="flex flex-col">
                <label asp-for="CategoryId" class="mb-1 font-semibold text-gray-600"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="w-full border border-gray-300 rounded-md px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-green-500">
                    <option value="">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div class="flex flex-col">
                <label asp-for="Price" class="mb-1 font-semibold text-gray-600"></label>
                <input asp-for="Price" class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Price" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div class="flex flex-col">
                <label asp-for="Stock" class="mb-1 font-semibold text-gray-600"></label>
                <input asp-for="Stock" class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Stock" class="text-red-500 text-xs mt-1"></span>
            </div>
            <div class="flex flex-col md:col-span-2">
                <label asp-for="Description" class="mb-1 font-semibold text-gray-600"></label>
                <textarea asp-for="Description" class="border border-gray-300 rounded-md px-3 py-2 resize-none focus:outline-none focus:ring-2 focus:ring-green-500" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-red-500 text-xs mt-1"></span>
            </div>
        </div>
    </div>
</div>
